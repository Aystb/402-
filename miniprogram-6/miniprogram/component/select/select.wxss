/* component/item/select.wxss */
.select-box {
  width: 100%;
  position: relative;
}

.select-con {
  display: flex;
  font-size: 60rpx;
  position: relative;
  justify-content: center;
}

.select-img {
  transition: all .3s ease;
  font-size: 32rpx;
  color: #35A9E6;
}

.select-txt {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 60rpx;
  color: #35A9E6;
  padding-left: 19%;
  padding-right: 8rpx;
}

.select-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #f8f8f8;
  position: absolute;
  border-top: none;
  box-sizing: border-box;
  z-index: 3;
  overflow: auto;
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(220, 220, 220, 0.5);
  padding: 20rpx 0rpx;
  border-radius: 0rpx 0rpx 8rpx 8rpx;
  margin-top: 20rpx;
}

.select-item {
  width: 100%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 60rpx;
  color: #999;
}